global:
  scrape_interval: 15s # Cứ 15s lấy dữ liệu 1 lần

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
        # Vòng lặp tự động lấy IP của tất cả máy trong file inventory
        {% for host in groups['all'] %}
        - '{{ hostvars[host].ansible_host }}:9100'
        {% endfor %}
